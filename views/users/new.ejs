<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
    <link rel="stylesheet" href="css/static_pages.css"> 
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 login">
          <div class="login-header">
            <span>Sign Up</span>
          </div>
          <% include ../partials/flash %>

          <form action="/api/users" method="post">
            <div class="form-section">
              <div class="form-label">
                <label>Username:</label>
              </div>
              <div class="form-input">
                <input type="text" name="username"/>
              </div>
            </div>

            <div class="form-section">
              <div class="form-label">
                <label>Password:</label>
              </div>
              <div class="form-input">
                <input type="password" name="password"/>
              </div>
            </div>  

            <div class="form-section">
              <div class="form-label">
                <label>Type:</label>
              </div>
              <div class="form-input-radio">
                <ul>
                  <li>
                    <input type="radio" name="role" id="tutor" value="tutor">
                    <label for="tutor">Tutor</label>
                  </li>
                  <li>
                    <input type="radio" name="role" id="tutee" value="tutee">
                    <label for="tutee">Tutee</label>
                  </li>
                </ul>
              </div>
            </div>

            <div class="form-btn">
              <input type="submit" value="Sign Up"/>
            </div>
          </form>

          <a href="/login">Sign in</a>
        </div>
      </div>
    </div>

  </body>
</html>